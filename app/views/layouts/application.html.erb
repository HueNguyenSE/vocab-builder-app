<!DOCTYPE html>
<html>
  <head>
    <title>Vocabuilder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <div class="header-wrap">
        <div class="header container">
          <%= link_to image_tag("vocabees-logo.png", alt: "Honeycomb", class: 'logo'), home_path %>
          <nav class="col-9">
            <% if @current_user.present? %>
              <% if @current_user.is_admin? %>
                <%= link_to 'All users', users_path %>
              <% end %>
              <%= link_to 'Families', families_path %>
              <%= link_to 'Concepts', concepts_path %>
              <%= link_to "New concept", new_concept_path %>
              <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= @current_user.email %>
                </a>

                <ul class="dropdown-menu">
                  <li><%= link_to 'Log out ', login_path, :method => 'delete', :class => 'dropdown-item' %></li>
                </ul>
              </div>
              <% else %>
                <%= link_to 'Log in', login_path %>
                <%= link_to 'Sign up', new_user_path %>
            <% end %>
          </nav>
        </div>
      </div>

        <%= yield %>
    </div>
  </body>
</html>

