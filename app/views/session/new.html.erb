<div class="guest">
    <div>
        <h1>Vocabees</h1>
        <p class="slogan">It simply works.</p>
    </div>

    <div class="login">
        <ol class="error">
            <%= flash[:error] %>
        </ol>

        <%= form_tag login_path do %>
            <%= email_field_tag :email, nil, placeholder: "Email address" %>

            <%= password_field_tag :password, nil, placeholder: "Password" %>

            <%= submit_tag "Log in" %>
        <% end %>
        or
        <a href="/users/new"><input type="button" value="Create new account" class="btn-signup"></a>
    </div>
</div>

